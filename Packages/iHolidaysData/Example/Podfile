platform :ios, '11.0'
use_frameworks!

def addScriptForLint
  script = '"${PODS_ROOT}/SwiftLint/swiftlint" autocorrect --format'
  script_phase :name => 'Lint', :script => script, :execution_position => :before_compile
end

target 'iHolidaysData_Example' do
  pod 'iHolidaysDomain', :path => '../../iHolidaysDomain'
  pod 'iHolidaysData', :path => '../', :testspecs => ['Tests']
  
  #Tools
  pod 'SwiftLint', '~> 0.42.0'
  
  # Scripts
  addScriptForLint
end

post_install do |installer|
  installer.generated_projects.each do |project|
    project.build_configurations.each do |config|
      if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 9.0
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '9.0'
      end
    end
    
    project.targets.each do |target|
      target.build_configurations.each do |config|
        if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 9.0
          config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '9.0'
        end
      end
    end
  end
end